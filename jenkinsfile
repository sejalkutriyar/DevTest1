pipeline{
    agent any
    tools {
        nodejs 'npm-16.14.0'
    }
    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing dependencies...'
                    bat 'npm install'
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                    bat 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    bat 'npm test'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying the application...'
                    bat 'npm run deploy'
                }
            }
        }
    }
}
