pipeline{
    agent any
    tools {
        maven 'maven-3.6.3'
    }
    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the project...'
                    bat 'mvn clean package'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    echo 'Running tests...'
                    bat 'mvn test'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying the application...'
                    bat 'mvn deploy'
                }
            }
        }
    }
}
